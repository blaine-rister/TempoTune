<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bbrister.metrodrone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5040365596623384~5072587493"/>
        <service
            android:name="com.bbrister.metrodrone.DroneService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name="com.bbrister.metrodrone.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bbrister.metrodrone.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.bbrister.metrodrone.CreditsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>
    
    <uses-permission android:name="com.android.vending.BILLING"/>

</manifest>